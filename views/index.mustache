<!DOCTYPE html>
<html dir="ltr" lang="en-US">
{{>head}}


<body class="container bg-secondary">

	<div class="row justify-content-around">		

		<!-- Header -->

		<div class="col-md-12 row justify-content-center text-uppercase">
			<div class="col-md-10 mt-3" style="text-align:center;margin-bottom:18px">
				<h1 class="text-white">Profiles</h1>
				<hr class="bg-white" />
			</div>
		</div>

		<!-- Navigation -->

		<div class="col-md-12 row  justify-content-center text-capitalize">
			<div class="col-md-12 mb-3 p-0">
				<nav class="nav flex-column flex-sm-row shadow-sm">
					{{#names}}
				  <a class="flex-sm-fill text-center bg-info text-white nav-link" href="/posts/{{.}}"><b>{{.}}</b></a>
					{{/names}}
				</nav>
			</div>
		</div>
		
		<!-- Card -->

		<div class="col-lg-3 col-md-5 col-sm-12 offset-lg-1 text-capitalize">
			<div class="card shadow mb-3 border-info rounded-0">
				<figure class="m-0">
					<img class="card-img-top rounded-0" src="{{image}}" alt="Card image cap">	
				</figure>			  	
				<div class="text-center">
				    <h5 class="card-title h4 text-white bg-info p-3 mb-0">
				    	Name: {{name}}
				    </h5>
				    <p class="card-text h4  text-white bg-info p-3">
				    	Company: {{company}}
				   	</p>
				</div>
			<p class="h4 bg-light p-3 mb-0 border-info text-info">Languages:</p>
			<ol class="col-md-12 mt-3 text-left">					
				{{#languages}}
					<li class="border-info text-info list-group-item rounded-0">{{.}}</li>
				{{/languages}}
			</ol>
			</div>	
		</div>
			
		<!-- Form -->

		<div class="col-md-6 col-sm-12 row  justify-content-center mb-5  text-capitalize">
			<div class="col-md-12 p-0">
				<div class="border border-info shadow">
				  	<div class="card-header bg-info text-white text-center h3">
				    	Create Profile
				  	</div>
				  	<form action="/posts/register" method="POST" enctype="multipart/form-data">
					  	<div class="card-body bg-white">
					  		<div class="form-group">
						    	<label class="text-info" for="name"><b>Name</b></label>
	    						<input type="text" class="form-control rounded-0 " id="name" name="name" placeholder="Name">					  			
					  		</div>
						<div class="form-group">
							<label class="text-info" for="company"><b>Company</b></label>
							<input type="text" class="form-control rounded-0 " id="company" name="company" placeholder="Company">							
						</div>
						<div class="form-group">
							<label class="text-info" for="image"><b>Image</b></label>
							<input type="file" class="form-control-file rounded-0 " id="image" name="image" placeholder="example.jpg">							
						</div>
						<div class="form-group">
							<label class="text-info" for="languages"><b>Languages</b></label>
							<input type="text" class="form-control rounded-0 " id="languages" name="languages" placeholder="Languages">							
						</div>
					  	</div>
					  	<div class="card-footer border-info bg-info text-muted">
					    	<button type="submit" class="btn btn-block btn-info rounded-0">Cadastrar</button>
					  	</div>
				  	</form>
				</div>
			</div>			
		</div>


		<!-- Reset button -->
		
		<div class="col-lg-8 row justify-content-center">
			<a class="btn btn-block btn-danger rounded-0" onclick="return confirm('Deseja realmente reiniciar a aplicação')" href="/posts/reset/app">Reset App</a>
		</div>

	</div>
	
</div>


  <!-- Turbo library imports: jQuery, Turbo CDN, sample app.js.
  NOTE: These should be minified in a build script -->
  <script type="text/javascript" src="/js/jquery.js"></script>

  <!-- For file uploading. Remove if file upload not necessry -->
  <script type="text/javascript" src="/js/dropzone.js"></script>

  <!-- Turbo CDN. Better to use CDN than to store locally. -->
  <script type="text/javascript" src="https://cdn.turbo360-dev.com/dist/turbo.min.js"></script>

  <!-- Your app specific code -->
  <script type="text/javascript" src="/js/app.js"></script>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
